<script>

    $(document).ready(function () {
        var pageItem = $(".pagination li").not(".prev,.next");
        var prev = $(".pagination li.prev");
        var next = $(".pagination li.next");
        var currentPage = 0;

        pageItem.click(function () {
            pageItem.removeClass("active");
            $(this).not(".prev,.next").addClass("active");
            currentPage = new URLSearchParams(location.search).get('page');
            if (currentPage != null) {
                location.href = "http://localhost:8080/products?page=" + (Number(currentPage) + 1).toString(); //
            }
        });

        next.click(function () {
            $('li.active').removeClass('active').next().addClass('active');
            currentPage = new URLSearchParams(location.search).get('page');
            if (currentPage != null) {
                location.href = "http://localhost:8080/products?page=" + (Number(currentPage) + 1).toString(); //
            }
        });

        prev.click(function () {
            $('li.active').removeClass('active').prev().addClass('active');
            currentPage = new URLSearchParams(location.search).get('page');
            //location.href = "http://localhost:8080/products?page=" + (Number(currentPage) - 1).toString(); //
            if (currentPage != null) {
                if (Number(currentPage) - 1 > 0) {
                    location.href = "http://localhost:8080/products?page=" + (Number(currentPage) - 1).toString(); //
                } else {
                    prev.addClass('disabled')
                }
            }
        });

    });

</script>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="/css/product-list.css">

<div class="container">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center pagination-lg">
            <!-- class="disabled"는 앞 페이지가 존재하지 않는다는 뜻, 클릭하지 못하는 상태가 됨-->
            <!--이전 페이지-->
            <li class="prev page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <!-- li태그의 클래스에 active를 넣으면 색이 반전되고 클릭도 되지 않는다. -->
            <!-- active의 의미는 현재 페이지의 의미이다. -->
            <!-- <li class="active"> active 보류 -->
            <li class="page-item"><a class="page-link" href="http://localhost:8080/products?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="http://localhost:8080/products?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="http://localhost:8080/products?page=3">3</a></li>
            <li class="page-item"><a class="page-link" href="http://localhost:8080/products?page=4">4</a></li>
            <li class="page-item"><a class="page-link" href="http://localhost:8080/products?page=5">5</a></li>
            <li class="page-item"><a class="page-link" href="http://localhost:8080/products?page="
                                     +{{page-total-count}}>
                {{page-total-count}} </a></li>

            <!--다음 페이지-->
            <li class="next">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="row">
        {{#products}}
            <div class="col-md-3 ">
                <!--<input type="hidden" value="{{id}}"/>-->
                <div class="ibox">
                    <div class="ibox-content product-box">

                        <div class="product-list-card-body">
                            <input type="hidden" value="{{id}}" class="product-detail-id"/>

                            <!--이미지-->
                            <div class="product-imitation">
                                <img src="{{imgUrl}}"/> <!--[ 사진 ]-->
                            </div>

                            <div class="product-desc">
                                <!-- <span class="product-discount">save 10%</span>-->
                                <a href="#" class="product-name">{{name}}</a>
                                <small class="product-price">{{price}}</small>
                                <div class="small m-t-xs description">
                                    <!--영양 가득한 흑미 즉석밥! 설명 연결~-->
                                    {{description}}
                                </div>
                                <!--
                                                            <div class="m-t text-left">
                                                                <button type="button" style="margin-top: 10px" class="btn btn-xs btn-outline btn-success" id="btn-shoplist">장바구니</button>
                                                                &lt;!&ndash;<a href="#" class="" >장바구니 </a>&ndash;&gt;
                                                            </div>
                                -->
                            </div>
                        </div>

                        <div class="m-t text-left">
                            <button type="button" style="margin-top: 10px"
                                    class="btn btn-xs btn-outline btn-success btn-shoplist" id="btn-shoplist">
                                <input type="hidden" value="{{id}}" id="product-detail-id"/>
                                <!--<input type="hidden" value= "1"/>-->
                                <input type="hidden" id="count" value="1"/>
                                장바구니
