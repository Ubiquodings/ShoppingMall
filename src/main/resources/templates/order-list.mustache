{{>layout/header}}
<style>
    .img-responsive {
        width: 100%;
    }
</style>


<div class="main1"> 상품 주문 내역</div> <!--위에 order-list-->

{{#orderList}} <!--List<Order>-->

<input type="hidden" value="{{id}}" id="input-order-id"/> <!-- Order 의 id -->

<div class="row" id="order-list-row">
    <div class="card" style="width: 100%;">
        <div class="card-body" data-toggle="modal" data-target="#exampleModalScrollable">
            <h5 class="card-title">{{title}}</h5> <!--잘나온다!-->
            <h5 class="card-title">{{totalPrice}}</h5>
            <!--            <button type="button" class="btn btn-primary btn-lg" id="btn-cart-order">주문</button>-->
        </div>

        <div>
            <div class="main2" > <!--x y ?-->
                <div id="main21" class="row" >
                    <button type="button" class="btn btn-primary btn-xs btn-order-cancel col-2" style="margin-left: 40px; margin-bottom: 20px;"> <!--y x 였다!!-->
                        <input type="hidden" value="{{id}}" class="input-order-id"/>환불 요청
                    </button>


                    <!--                    <button> 환불 요청(주문취소) </button>-->
<!--                    <button> 교환 요청</button>-->
<!--                    <button> 리뷰 쓰기</button>-->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">주문 상세 정보</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{#orderProducts}} <!--UI 수정, ajax 로 수정-->
                    <div class="row">
<!--                    {{id}}-->
                        <div class="col-3">
                            <img class="img-responsive" src="{{product.imgUrl}}"/>
                        </div>
                        <div class="col-9">
                            <p>{{product.name}}</p>
                            <p>{{count}} 개 {{product.price}} 원</p>
                        </div>

                        <input type="hidden" value="{{product.id}}" class="product-detail-id"/>
                        <!--이 상품을 구매한 사람 수--> <!--돈 다발-->
                        <div class="col mini-text-font productOrderUserNumber-{{product.id}}" id="userOrderNumber" style="margin-top: 10px; margin-left: 0">
                        <span class="material-icons pink00 d-inline-block" tabindex="0" data-toggle="tooltip"
                              title="이 상품을 구매한 사람 수">payment</span>
                            <span class="align-text-bottom">0명</span>
                        </div>

                    </div>
                {{/orderProducts}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">닫기</button>
                <button type="button" class="btn btn-primary btn-order-cancel"><input type="hidden" value="{{id}}" class="input-order-id"/>주문 취소</button>
            </div>
        </div>
    </div>
</div>

{{/orderList}}

